    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": ["server/index.ts"],
            "outputCapture": "std" ,
            "env": {
                "NODE_ENV": "development"
            }   
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Current File",
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": ["${file}"],
            "outputCapture": "std" ,
            "env": {
                "NODE_ENV": "development"
            }   
        }
    ]
}